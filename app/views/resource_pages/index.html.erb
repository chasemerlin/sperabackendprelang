<h1>Listing resource_pages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resource_pages.each do |resource_page| %>
      <tr>
        <td><%= resource_page.title %></td>
        <td><%= resource_page.description %></td>
        <td><%= link_to 'Show', resource_page %></td>
        <td><%= link_to 'Edit', edit_resource_page_path(resource_page) %></td>
        <td><%= link_to 'Destroy', resource_page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

