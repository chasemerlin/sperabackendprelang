<h1>Listing messages</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Group</th>
      <th>User recipient</th>
      <th>Friendship</th>
      <th>Resource page</th>
      <th>Resource page</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.content %></td>
        <td><%= message.user %></td>
        <td><%= message.group %></td>
        <td><%= message.user_recipient_id %></td>
        <td><%= message.friendship %></td>
        <td><%= message.resource_page %></td>
        <td><%= message.resource_page %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

